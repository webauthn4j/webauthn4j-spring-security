<entity-mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd"
                 version="2.1">
    <embeddable class="com.webauthn4j.response.attestation.authenticator.AttestedCredentialData">
        <attributes>
            <basic name="aaguid">
                <column column-definition="blob"/>
            </basic>
            <basic name="credentialId">
                <column column-definition="blob"/>
            </basic>
            <basic name="credentialPublicKey">
                <column column-definition="clob"/>
                <convert
                        converter="net.sharplab.springframework.security.webauthn.sample.infrastructure.util.jpa.converter.CredentialPublicKeyConverter"/>
            </basic>
        </attributes>
    </embeddable>

</entity-mappings>
